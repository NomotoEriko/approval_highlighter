{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/dropzone",
      "@types/d3",
      "@types/node",
      "@types/vue-cli-plugin-apollo",
      "@nuxtjs/moment",
      "vue-apollo/types",
      "bootstrap-vue/esm"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
